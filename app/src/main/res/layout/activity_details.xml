<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/almendra_sc"
        android:text="Character's details"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_detail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text_view_character_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toRightOf="@id/image_view_detail"
                android:text="Character's Name"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_character_detail"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toRightOf="@id/image_view_detail"
                android:text="height"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/height"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toRightOf="@id/image_view_detail"
                android:text="mass"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mass"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toRightOf="@id/image_view_detail"
                android:text="gender"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/homeworld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toRightOf="@id/image_view_detail"
                android:text="homeworld"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/wiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view_detail"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="wiki"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/born"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wiki"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="born"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/born_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/born"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="born location"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/died"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/born_location"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Died"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/died_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/died"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="died location"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/died_location"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="species"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/species"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="hair"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hair"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="eye"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/skin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eye"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="skin"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/cyber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/skin"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="cybernetics"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/affiliations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cyber"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="affiliations"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/masters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/affiliations"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="masters"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/apprentices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/masters"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="apprentices"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/former"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/apprentices"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="former"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/former"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="date created"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/date_destroyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_created"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="date destroyed"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/destroyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_destroyed"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="destroyed location"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/destroyed"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="creator"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/creator"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="manufacturer"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/manufacturer"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/almendra_sc"
                android:text="model"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/class_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/model"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="class"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="sensor"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/plating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sensor"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/almendra_sc"
                android:text="plating"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/equipments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plating"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="equipments"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/equipments"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="product"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/kajidic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="kajidic"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/era"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kajidic"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="era"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/era"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="degree"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <TextView
                android:id="@+id/armament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/degree"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="armament"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                app:fontFamily="@font/almendra_sc" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/armament"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Save"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/armament"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/delete"
                android:layout_toRightOf="@id/save"
                android:background="@android:color/holo_orange_dark"
                android:text="Load"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/armament"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Delete"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>